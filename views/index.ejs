<%- include('./layout/header.ejs') %>

  <!--列表-->
  <div class="container-fluid">
    <ul class="list-group">
      <% list.forEach(item=>{ %>
        <li class="list-group-item"><a href="/article/info?id=<%= item.id %>"><%= item.title %></a></li>
      <% }) %>
      
    </ul>
 

  <!--分页器-->
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li>
        <a href="/?page=<%= nowPage == 1?1: nowPage-1 %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
      </li>

      <% for(var i = 0;i < totalCount; i++){ %>
        <li class="<%= nowPage == (i+1)?'active':'' %>"><a href="/?page=<%= (i+1) %>"><%= i+1 %></a></li>
      <% } %>

      <li>
        <a href="/?page=<%= nowPage == totalCount?totalCount: nowPage+1 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
      </li>
    </ul>
  </nav>
 </div>

  <%- include('./layout/footer.ejs') %>